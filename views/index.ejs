<div class="author">
    <h1 class="author__heading">Hi, I am NIEL.</h1>
    <p class="author__body">Web developer and Tech Enthusiast.</p>
  </div>
  
  <img src="/img/hero.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">
  
  <section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <% if(data.posts && data.count > 0){ %>
  
    <ul class="article-ul">
        <% data.posts.forEach(post => { %>
         
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <!-- <span class="article-list__date"><%= post.body %></span> -->
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>

        <% }) %>
    </ul>
  
  
    <% if (data.nextPage != null) { %>
     
      <a href="/?page=<%= data.nextPage%>" class="pagination">&lt; View Older Posts</a>
      <% } %>
    
    <% }else{ %>

    <h1>No Post Found</h1>
   
    <% } %>
  
    
  
  
  
  </section>